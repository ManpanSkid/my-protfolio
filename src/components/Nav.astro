---
const links = [
  { label: "CV",      href: "#cv"      },
  { label: "Skills",  href: "#skills"  },
  { label: "Projects",href: "#projects"},
  { label: "Contact", href: "#contact" },
];

const githubUrl = "https://github.com/ManpanSkid";
---

<nav
  id="navbar"
  class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur px-6 py-4"
>
  <div class="container mx-auto flex items-center justify-between">
    <!-- left / center: nav links -->
    <ul id="nav-list" class="relative flex gap-10">
      {links.map((l) => (
        <li class="relative">
          <a
            href={l.href}
            data-section={l.href.replace("#", "")}
            class="nav-link relative text-gray-700 hover:text-black transition"
          >
            {l.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- right: GitHub logo -->
    <a
      href={githubUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="shrink-0 ml-8 text-gray-700 hover:text-black transition"
      aria-label="GitHub"
    >
      <svg
        class="h-6 w-6"
        fill="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.6.113.793-.26.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.744.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
      </svg>
    </a>
  </div>

  <!-- green dot -->
  <span
    id="green-dot"
    class="absolute bottom-0 h-2 w-2 rounded-full bg-green-500 transition-all duration-300 ease-out"
  ></span>
</nav>

<style>
  #green-dot { opacity: 0; }
  #green-dot.active { opacity: 1; }
</style>

<script>
  /* ----- keep your existing JS untouched ----- */
  const links = Array.from(
    document.querySelectorAll<HTMLAnchorElement>(".nav-link"),
  );
  const dot = document.getElementById("green-dot")!;
  const sections = links
    .map((l) => document.getElementById(l.dataset.section!))
    .filter(Boolean) as HTMLElement[];

  let active: HTMLAnchorElement | null = null;

  function placeDot(under: HTMLAnchorElement) {
    const { left, width, bottom } = under.getBoundingClientRect();
    const navRect = under.closest("nav")!.getBoundingClientRect();
    dot.style.left = `${left - navRect.left + width / 2}px`;
    dot.style.transform = "translateX(-50%)";
    dot.style.top = `${bottom - navRect.top + 4}px`;
    dot.classList.add("active");
  }

  function onScroll() {
    let closest: HTMLElement | null = null;
    let min = Infinity;
    for (const s of sections) {
      const dist = Math.abs(s.getBoundingClientRect().top);
      if (dist < min) {
        min = dist;
        closest = s;
      }
    }
    const next = links.find((l) => l.dataset.section === closest?.id) ?? null;
    if (next && next !== active) {
      active = next;
      placeDot(active);
    }
  }

  window.addEventListener("scroll", onScroll, { passive: true });
  onScroll();
</script>