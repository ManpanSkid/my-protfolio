---
export interface Props {
  name: string;
}

const { name } = Astro.props;
---

<section id={name} class="bg-gray-50 min-h-screen py-18">
  <div class="max-w-2/3 mx-auto px-4">
    <h1 class="text-4xl font-bold mb-12 text-gray-800">Career Timeline</h1>

    <div class="relative">
      <!-- vertical line -->
      <div class="absolute left-24 top-0 bottom-0 w-0.5 timeline-line"></div>

      <div class="space-y-8">
        <!-- CV header -->
        <!-- <div class="timeline-item relative flex items-center">
          <div class="w-20 text-right pr-4">
            <span class="text-sm font-medium text-gray-500">-</span>
          </div>
          <div class="absolute left-20 w-4 h-4 bg-blue-600 rounded-full border-4 border-white timeline-dot z-10"></div>
          <div class="ml-12 timeline-content">
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
              <h2 class="text-2xl font-bold text-gray-800">CV – Joel Höfer</h2>
            </div>
          </div>
        </div> -->

        <!-- 2019 -->
        <div class="timeline-item relative flex items-center">
          <div class="w-20 text-right pr-4">
            <span class="text-lg font-semibold text-gray-700">2019</span>
          </div>
          <div class="absolute left-20 w-4 h-4 bg-blue-600 rounded-full border-4 border-white timeline-dot z-10"></div>
          <div class="ml-12 timeline-content">
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-semibold text-gray-800 mb-2">Building first computers for Family and Friends</h3>
              <p class="text-gray-600">Started building custom computers, gaining hands-on hardware experience</p>
            </div>
          </div>
        </div>

        <!-- 2021 #1 -->
        <div class="timeline-item relative flex items-center">
          <div class="w-20 text-right pr-4">
            <span class="text-lg font-semibold text-gray-700">2021</span>
          </div>
          <div class="absolute left-20 w-4 h-4 bg-blue-600 rounded-full border-4 border-white timeline-dot z-10"></div>
          <div class="ml-12 timeline-content">
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-semibold text-gray-800 mb-2">First time programming</h3>
              <p class="text-gray-600">Began learning programming fundamentals and software development</p>
            </div>
          </div>
        </div>

        <!-- 2021 #2 -->
        <div class="timeline-item relative flex items-center">
          <div class="w-20 text-right pr-4">
            <span class="text-lg font-semibold text-gray-700">2021</span>
          </div>
          <div class="absolute left-20 w-4 h-4 bg-blue-600 rounded-full border-4 border-white timeline-dot z-10"></div>
          <div class="ml-12 timeline-content">
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-semibold text-gray-800 mb-2">Key Manager with API and Database</h3>
              <p class="text-gray-600">Developed a key management system with API integration and database backend</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* scoped styles – Astro automatically scopes them */
  .timeline-line {
    background: linear-gradient(to bottom, transparent 0%, #e5e7eb 10%, #e5e7eb 90%, transparent 100%);
  }

  .timeline-item {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
  }
  .timeline-item:nth-child(1) { animation-delay: 0.1s; }
  .timeline-item:nth-child(2) { animation-delay: 0.2s; }
  .timeline-item:nth-child(3) { animation-delay: 0.3s; }
  .timeline-item:nth-child(4) { animation-delay: 0.4s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .timeline-dot {
    transition: all 0.3s ease;
  }
  .timeline-item:hover .timeline-dot {
    transform: scale(1.3);
    box-shadow: 0 0 0 8px rgba(59, 130, 246, 0.1);
  }

  .timeline-content {
    transition: all 0.3s ease;
  }
  .timeline-item:hover .timeline-content {
    transform: translateX(5px);
  }
</style>